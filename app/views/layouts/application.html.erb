<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <p class="nav user">
        <%= link_to 'TestGuru', root_path %>
        Добро пожаловать, <b><%= current_user.username%></b>!
        <%= link_to 'Выйти', logout_path %>
      </p>
    <% else %>
      <p class="nav user">
          <%= link_to 'TestGuru', root_path %>
          <%= link_to 'Зарегистрироваться', login_path %>
          <%= link_to 'Войти', signup_path %>
      </p>
    <% end %>

    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
