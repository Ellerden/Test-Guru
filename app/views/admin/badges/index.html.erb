<% if @badges.present? %>
    <h2><%= t('.header') %></h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col"><%= t('.image') %></th>
          <th scope="col" class="sort-by-title pointer">
            <%= t('.name') %>
            <%= octicon 'arrow-up', class: "text-success hide" %>
            <%= octicon 'arrow-down', class: "text-success hide" %>
          </th>
          <th scope="col"><%= t('.rule') %></th>
          <th scope="col"><%= t('.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @badges%>
      </tbody>
    </table>
<% end %>
<div class="row">
  <%= link_to t('.back'), admin_tests_path, class: "nav-link" %>
</div>
