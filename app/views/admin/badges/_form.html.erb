<div class="container">
  <div class="col col-md-6">
    
    <%= render 'shared/errors', resource: @badge %>

    <%= form_with(model: [:admin, @badge], local: true) do |f| %>
      <div class="form-group">
        <p>
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: true, class: "form-control" %>
        </p>
        <p>
          <div class="row">
            <% Badge::IMAGES.map do |img| %>
              <div class="col-sm-4">
                <%= f.radio_button :route, img[1] %>
                <%= image_tag(img[1], width: '100px') %>
              </div>
            <% end %>
          </div>
        </p>
        <p>
          <%= f.label :rule %>
          <%= f.collection_select(:rule_id, Rule.all, :id, :description, prompt: true) %>
          <%= link_to t('.create_new_rule'), new_admin_rule_path, class: "btn btn-secondary" %>
        </p>
        <div class="row">
          <div class="col col-md-6">
            <%= f.submit class: "btn btn-primary" %>
            <%= link_to t('.back'), admin_tests_path, class: "nav-link" %>
          </div> 
        </div>
      </div>
    <% end %>
  </div>
</div>
