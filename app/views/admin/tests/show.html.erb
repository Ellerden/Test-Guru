<%= render @test %>
<div class="container"> 
  <div class="row">
    <div class="col col-12">
      <% if @test.questions.present? %>
        <h2><%= t('.test_questions') %></h2>
        <%= render @test.questions %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col col-12">
      <%= link_to t('.add_question'), new_admin_test_question_path(@test), class: "btn btn-primary" %> 
      <%= link_to t('.back'), admin_tests_path, class: "nav-link" %>
    </div>
  </div>
</div>
